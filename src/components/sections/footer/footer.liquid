{% style %}
  #shopify-section-{{ section.id }} .heading {
    color: {{ section.settings.heading_color }};
  }
  #shopify-section-{{ section.id }}
  , #shopify-section-{{ section.id }}
  li
  , #shopify-section-{{ section.id }}
  p
  , #shopify-section-{{ section.id }}
  a
  , #shopify-section-{{ section.id }}
  .link {
    color: {{ section.settings.text_color }};
  }
  #shopify-section-{{ section.id }}a:hover,
  #shopify-section-{{ section.id }}.link:hover {
    color: {{ section.settings.text_hover_color }};
  }
  #shopify-section-{{ section.id }}
  a.social {
    color: {{ section.settings.social_color }};
  }
  #shopify-section-{{ section.id }}a.social:hover {
    color: {{ section.settings.social_hover_color }};
  }
{% endstyle %}

<div style="background-color: {{ section.settings.background }};border-top: 1px solid {{ section.settings.border_color }}">
  <span class="md:grid-cols-1 md:col-span-1 md:grid-cols-2 md:col-span-2 md:grid-cols-3 md:col-span-3 md:grid-cols-4 md:col-span-4 md:grid-cols-5 md:col-span-5 md:grid-cols-6 md:col-span-6 
  lg:grid-cols-1 lg:col-span-1 lg:grid-cols-2 lg:col-span-2 lg:grid-cols-3 lg:col-span-3 lg:grid-cols-4 lg:col-span-4 lg:grid-cols-5 lg:col-span-5 lg:grid-cols-6 lg:col-span-6 hidden">
</span>
  <div class="page-width">
    {%- if section.blocks.size > 0 -%}
      <div class="gap-x-4 py-5 grid grid-cols-{{ section.settings.col_per_row_mobile }} md:grid-cols-{{ section.settings.col_per_row_tablet }} lg:grid-cols-{{ section.settings.col_per_row_desktop }}">
        {%- for block in section.blocks -%}
          <{% unless block.type == 'link_list' %}div{% else %}accordion-toggle{% endunless %} data-block-id="{{ block.id }}" class="col-span-{{ block.settings.col_span_mobile }} md:col-span-{{ block.settings.col_span_tablet }} lg:col-span-{{ block.settings.col_span_desktop }} auto-cols-max 
                        py-4 active">
            {% if block.settings.logo != blank %}
              <img
                src="{{ block.settings.logo | image_url: width: block.settings.logo.width }}"
                loading="lazy"
                class="block w-31 h-auto object-contain mb-3"
                width="{{ block.settings.logo.width }}"
                height="{{ block.settings.logo.height }}"
                alt="{{ shop.name }}">
            {% endif %}
            {%- if block.settings.heading != blank -%}
              <div class="summary flex items-center justify-between gap-x-2 h-fit">
                <div class="heading {% if block.type == 'link_list' %}text-base font-normal{% else %}text-xl font-medium tracking-tighter{%- endif -%}">{{- block.settings.heading | escape -}}</div>
                {% if block.type == 'link_list' %}
                  <span class="heading icon-add md:!hidden text-primary">{%- render 'icon-down', class: 'w-6 h-6' -%}</span>
                  <span class="heading icon-minus md:!hidden text-primary">{%- render 'icon-up', class: 'w-6 h-6' -%}</span>
                {%- endif -%}
              </div>
            {%- endif -%}
            {%- case block.type -%}
              {%- when 'text' -%}
                  {%- if block.settings.show_social -%}
                    <div class="mt-4 col-span-1">
                      <ul class="flex flex-wrap gap-5 items-center" role="list">
                        {%- if settings.social_thread_link != blank -%}
                          <li class="w-8 h-8">
                            <a
                              href="{{ settings.social_thread_link }}"
                              class="social text-xs leading-normal text-primary hover:text-primary"
                              rel="nofollow"
                              target="_blank"
                              title="thread">
                              {%- render 'icon-thread', class: "w-8 h-8" -%}
                            </a>
                          </li>
                        {%- endif -%}

                        {%- if settings.social_facebook_link != blank -%}
                          <li class="w-8 h-8">
                            <a
                              href="{{ settings.social_facebook_link }}"
                              class="social text-xs leading-normal text-primary hover:text-primary"
                              rel="nofollow"
                              target="_blank"
                              title="Facebook">
                              {%- render 'icon-facebook', class: "w-8 h-8" -%}
                            </a>
                          </li>
                        {%- endif -%}

                        {%- if settings.social_instagram_link != blank -%}
                          <li class="w-8 h-8">
                            <a
                              href="{{ settings.social_instagram_link }}"
                              class="social text-xs leading-normal text-primary hover:text-primary"
                              rel="nofollow"
                              target="_blank"
                              title="Instagram">
                              {%- render 'icon-instagram', class: "w-8 h-8" -%}
                            </a>
                          </li>
                        {%- endif -%}

                        {%- if settings.social_twitter_link != blank -%}
                          <li class="w-8 h-8">
                            <a
                              href="{{ settings.social_twitter_link }}"
                              class="social text-xs leading-normal text-primary hover:text-primary"
                              rel="nofollow"
                              target="_blank"
                              title="Twitter">
                              {%- render 'icon-twitter', class: "w-8 h-8" -%}
                            </a>
                          </li>
                        {%- endif -%}

                        {%- if settings.social_pinterest_link != blank -%}
                          <li class="w-8 h-8">
                            <a
                              href="{{ settings.social_pinterest_link }}"
                              class="social text-xs leading-normal text-primary hover:text-primary"
                              rel="nofollow"
                              target="_blank"
                              title="Pinterest">
                              {%- render 'icon-pinterest', class: "w-8 h-8" -%}
                            </a>
                          </li>
                        {%- endif -%}

                        {%- if settings.social_youtube_link != blank -%}
                          <li class="w-8 h-8">
                            <a
                              href="{{ settings.social_youtube_link }}"
                              class="social text-xs leading-normal text-primary hover:text-primary"
                              rel="nofollow"
                              target="_blank"
                              title="youtube">
                              {%- render 'icon-youtube', class: "w-8 h-8" -%}
                            </a>
                          </li>
                        {%- endif -%}

                        {%- if settings.social_tiktok_link != blank -%}
                          <li class="w-8 h-8">
                            <a
                              href="{{ settings.social_tiktok_link }}"
                              class="social text-xs leading-normal text-primary hover:text-primary"
                              rel="nofollow"
                              target="_blank"
                              title="tiktok">
                              {%- render 'icon-tiktok', class: "w-8 h-8" -%}
                            </a>
                          </li>
                        {%- endif -%}

                      </ul>
                    </div>
                  {% endif %}
              {%- when 'link_list' -%}
                {%- if block.settings.menu != blank -%}
                  <ul class="details md:!mt-4 md:!max-h-full p-0 grid gap-y-3">
                    {%- for link in block.settings.menu.links -%}
                      <li>
                        <a
                          href="{{ link.url }}"
                          class="text-sm leading-normal text-primary hover:text-primary"
                          title="{{ link.title }}">
                          {{ link.title }}
                        </a>
                      </li>
                    {%- endfor -%}
                  </ul>
                {%- endif -%}
            {%- endcase -%}
          </{% unless block.type == 'link_list' %}div{% else %}accordion-toggle{% endunless %}>
        {%- endfor -%}
      </div>
    {%- endif -%}


  </div>
  <div class="bg-[#FAFAFA]">
    <div class="page-width w-full col-span-{{ section.settings.col_per_row_mobile }} md:col-span-{{ section.settings.col_per_row_tablet }} lg:col-span-{{ section.settings.col_per_row_desktop }} 
      flex flex-col lg:flex-row items-center justify-center lg:justify-between py-10">
      {%- if section.blocks.size > 0 -%}
        {% if section.settings.copyright != blank %}
          <p class="text-center text-xs !text-primary order-2 md:order-1">{{ section.settings.copyright }}</p>
        {% endif %}
      {% endif %}
      <ul class="flex flex-wrap items-center gap-2 justify-center mb-3 md:mb-0 md:order-2" role="list">
        {% for type in shop.enabled_payment_types %}
          {% if type == 'american_express' %}
            <li>
              {% render 'icon-amex'
                , class: 'icon icon--full-color w-9 h-auto' %}
            </li>
          {% else %}
            <li>
              {%- assign first_svg = type | payment_type_svg_tag: class: 'icon icon--full-color' | split: '<title' | first -%}
              {%- assign last_svg = type | payment_type_svg_tag: class: 'icon icon--full-color' | split: '</title>' | last -%}
              {{- first_svg -}}{{- last_svg -}}</li>
          {% endif %}
        {%- endfor -%}
      </ul>
    </div>
  </div>
  <div id="scrollToTop" class="hidden">
    {%- render 'icon-back' -%}
  </div>

</div>
