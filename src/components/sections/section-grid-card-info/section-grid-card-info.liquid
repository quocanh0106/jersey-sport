<link rel="stylesheet" href="{{ 'template-contact.css' | asset_url }}" />

{% style %}
  #shopify-section-{{ section.id }} {
    {%- if section.settings.background_color != blank -%}background-color: {{ section.settings.background_color }};
  {%- endif -%}
  margin-top: {{ section.settings.margin_top_mb }}px;
  margin-bottom: {{ section.settings.margin_bottom_mb }}px;
}

@media (min-width: 1024px) {
  #shopify-section-{{ section.id }} {
    margin-top: {{ section.settings.margin_top }}px;
    margin-bottom: {{ section.settings.margin_bottom }}px;
  }
}
{% endstyle %}

<div
  class="relative contact-tab normal-tab page-width grid-cols-1 col-span-1 grid-cols-2 col-span-2 grid-cols-3 col-span-3 lg:grid-cols-1 lg:col-span-1 lg:grid-cols-2 lg:col-span-2 lg:grid-cols-3 lg:col-span-3 lg:grid-cols-1 lg:col-span-1 lg:grid-cols-2 lg:col-span-2 lg:grid-cols-3 lg:col-span-3 lg:grid-cols-4 lg:col-span-4 lg:grid-cols-5 lg:col-span-5 lg:grid-cols-6 lg:col-span-6 lg:grid-cols-7 lg:col-span-7 lg:grid-cols-8 lg:col-span-8  data-section-id="
  {{ section.id }}
  " id="
  contact-section">
  <div class="col-span-5 pb-20">
    <div class="relative bg-white">
      <div class="relative max-w-3xl px-4 mx-auto text-center pb-96 sm:pb-0 sm:px-6 lg:px-8">
        <div class="relative py-10">
          <h1 class="text-3xl font-medium tracking-tighter text-white">★ Why Pro Jersey Sports ★</h1>
        </div>
      </div>

      <section aria-labelledby="collection-heading" class="relative -mt-96 sm:mt-0">
        <div class="grid max-w-md grid-cols-1 px-4 mx-auto gap-y-6 sm:max-w-7xl sm:px-6 sm:grid-cols-4 sm:gap-y-0 sm:gap-x-6 lg:px-8 lg:gap-x-8">
          {% for block in section.blocks %}
            <div class="bg-white shadow-lg group lg:h-[21rem]">
              <div class="lg:h-44">
                <img
                  src="{{ block.settings.image | image_url: width: block.settings.image.width }}"
                  width="{{ block.settings.block.width }}"
                  height="{{ block.settings.block.height }}"
                  loading="lazy"
                  alt="{{ block.settings.block.alt }}">
              </div>
              <div class="flex items-center justify-center h-36">
                <p class="text-xl font-medium tracking-tighter text-center text-subtext">
                  {{ block.settings.subheading }}
                </p>
                <p class="text-xl font-medium tracking-tighter text-center text-subtext uppercase">
                  {{ block.settings.heading }}
                </p>
                <p class="text-xs text-center text-primary">
                  {{ block.settings.description }}
                </p>
              </div>
            </div>
          {% endfor %}
        </div>
      </section>
    </div>
  </div>
</div>

{% capture helpCenter %}{{ 'template-contact.js' | asset_url }}{% endcapture %}
{% render 'atom_script'
  , src: helpCenter
  , priority: 'normal'
  , type: "defer" %}

{% schema %}
  {
    "name": "Section grid card info",
    "tag": "section",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "default": "★ Why Pro Jersey Sports ★"
      },
      {
        "type": "range",
        "id": "col_per_row_mobile",
        "label": "Cols per row mobile",
        "min": 1,
        "max": 3,
        "default": 3,
        "step": 1
      },
      {
        "type": "range",
        "id": "col_per_row_desktop",
        "label": "Cols per row desktop",
        "min": 1,
        "max": 8,
        "default": 1,
        "step": 1
      },
      {
        "type": "header",
        "content": "Margin desktop"
      }, {
        "type": "range",
        "id": "margin_top",
        "min": 0,
        "max": 200,
        "step": 4,
        "unit": "px",
        "label": "Margin top",
        "default": 16
      }, {
        "type": "range",
        "id": "margin_bottom",
        "min": 0,
        "max": 200,
        "step": 4,
        "unit": "px",
        "label": "Margin bottom",
        "default": 16
      }, {
        "type": "header",
        "content": "Margin mobile"
      }, {
        "type": "range",
        "id": "margin_top_mb",
        "min": 0,
        "max": 200,
        "step": 4,
        "unit": "px",
        "label": "Margin top",
        "default": 16
      }, {
        "type": "range",
        "id": "margin_bottom_mb",
        "min": 0,
        "max": 200,
        "step": 4,
        "unit": "px",
        "label": "Margin bottom",
        "default": 16
      }
    ],
    "blocks": [
      {
        "type": "image",
        "name": "Image",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          }, {
            "type": "text",
            "id": "heading",
            "label": "Heading"
          }, {
            "type": "text",
            "id": "subheading",
            "label": "Subheading"
          }, {
            "type": "richtext",
            "id": "description",
            "label": "Description"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Section grid card info"
      }
    ]
  }
{% endschema %}