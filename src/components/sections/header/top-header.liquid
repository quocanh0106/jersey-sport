{% if section.settings.top_menu != blank %}
  <div class="hidden lg:block relative h-[34px]" style="background-color: {{ section.settings.background }};">
    <div class="page-width h-full">
      <ul class="w-full flex flex-wrap items-center justify-end h-full gap-5">
        {% for link in linklists[section.settings.top_menu].links %}
          <li class="leading-[0]">
            <a
              href="{{ link.url }}"
              class="text-[10px] uppercase leading-3"
              style="color: {{ section.settings.color }}">{{ link.title }}</a>
          </li>
          {% unless forloop.last %}
            <li class="!block h-3 w-[1px] leading-[0]" style="background: {{ section.settings.color }}">

            </li>
          {% endunless %}
        {% endfor %}
      </ul>
    </div>
  </div>
{% endif %}
{% schema %}
  {
    "name": "Top header",
    "tag": "section",
    "settings": [
      {
        "type": "color",
        "id": "background",
        "label": "Background color",
        "default": "#F5F5F5"
      }, {
        "type": "color",
        "id": "color",
        "label": "Text color",
        "default": "#626262"
      }, {
        "type": "link_list",
        "id": "top_menu",
        "label": "Top menu"
      }
    ]
  }
{% endschema %}