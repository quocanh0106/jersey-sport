<div class='absolute bg-special text-background min-w-[1rem] h-4 rounded-full flex justify-center items-center bottom-4.5 left-2.5 empty:hidden'>
  {%- if cart != empty -%}
    {%- if cart.item_count < 100 -%}
      <span aria-hidden='true' class='flex justify-center items-center h-full text-xxs leading-none'>
        {{ cart.item_count }}
      </span>
    {% else %}
      <span aria-hidden='true' class='flex justify-center items-center h-full text-xxs'>+99</span>
    {%- endif -%}
  {%- endif -%}
</div>