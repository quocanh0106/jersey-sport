{% style %}
  {% if section.settings.background != blank %}
    #shopify-section-{{ section.id }} {
      background: {{ section.settings.background }};
    }
  {% endif %}
  [data-section-id="{{ section.id }}"] {
    padding-top: {{ section.settings.padding_top_mobile }}px;
    padding-bottom: {{ section.settings.padding_mobile }}px;
  }
  [data-section-id="{{ section.id }}"] iframe {
    width: 100%;
    height: 514px;
  }
  @media(min-width: 768px) {
    [data-section-id="{{ section.id }}"] {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding }}px;
    }
  }
{% endstyle %}
<div class="page-width section-faqs" data-section-id="{{ section.id }}">
  {% if section.settings.iframe != blank %}
    {{ section.settings.iframe }}
  {% endif %}
</div>

{% schema %}
  {
    "name": "Section Map",
    "tag": "section",
    "settings": [
      {
        "type": "html",
        "id": "iframe",
        "label": "Iframe from google"
      },
      {
        "type": "header",
        "content": "Padding desktop"
      },
      {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 200,
        "step": 2,
        "unit": "px",
        "label": "Padding top",
        "default": 20
      },
      {
        "type": "range",
        "id": "padding",
        "min": 0,
        "max": 200,
        "step": 2,
        "unit": "px",
        "label": "Padding bottom",
        "default": 20
      },
      {
        "type": "header",
        "content": "Padding mobile"
      },
      {
        "type": "range",
        "id": "padding_top_mobile",
        "min": 0,
        "max": 200,
        "step": 4,
        "unit": "px",
        "label": "Padding top",
        "default": 32
      },
      {
        "type": "range",
        "id": "padding_mobile",
        "min": 0,
        "max": 200,
        "step": 4,
        "unit": "px",
        "label": "Padding bottom",
        "default": 32
      }
    ],
    "presets": [
      {
        "name": "Section Map"
      }
    ]
  }
{% endschema %}